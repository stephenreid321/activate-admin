
<div id="alert-wrap" class="mt-3" style="position: absolute; width: 100%; z-index: 9999; top: 0">
  <div class="container">
    <div class="row justify-content-center">
      <% { error: 'alert-danger', warning: 'alert-warning', notice: 'alert-primary' }.each { |k,v| %>

        <% if flash[k] %>
          <div class="col col-md-6">
            <div class="alert fade show <%= v %> alert-dismissable">
              <%== flash[k] %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
        <% end %>

      <% } %>
    </div>
  </div>
</div>

<script>
  $(function () {
    window.setTimeout(function () {
      $("#alert-wrap .alert").alert('close');
    }, 3000);
  });
</script>
